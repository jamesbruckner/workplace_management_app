<div class="container align-items-center" id="cusW">
    <h2 class="text-white">
            Reports
        </h2>
    <ul id="list">
        {{#each reports as |report|}}
        <li class="text" id="{{report.id}}">
            <div class="titleBar row justify-content-between">
                <h1 class="col text-start">{{report.title}}</h1>
                <h1 class="col text-end {{report.status}}">{{report.status}}</h1>
            </div>
            <div class="infoBody {{report.status}}Body" hidden>
                <p>{{report.content}}</p>

                <div class="row">
                    {{#if is_manager}}                    
                    <button class="btn col-1" id="editBtn" type="submit">âœŽ</button>
                    <div class="col repEditBtns" hidden>
                        <button class="btn reportBtns" id="pendingBtn" type="submit">Pending</button>
                        <button class="btn reportBtns" id="resolveBtn" type="submit">Resolve</button>
                        <button class="btn reportBtns" id="closeBtn" type="submit">Close</button>
                    </div>
                    {{/if}}
                    

                    <p class="text-end names mb-0 col">Reported by: <b> {{report.user.first_name}}
                            {{report.user.last_name}}</b></p>
                </div>
            </div>
        </li>
        {{/each}}
    </ul>
    <div class="d-flex justify-content-center">
        <a class="btn customBtn" href="/reports/add">+</a>
    </div>
</div>
